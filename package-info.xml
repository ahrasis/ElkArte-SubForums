	<id>ahrasis:SubForums</id>
	<name>SFA: Sub Forums Addon</name>
	<version>1.41</version>
	<type>modification</type>

	<install for="1.0.*">
		<readme type="file" parsebbc="true">install/readme.bbc</readme>
		<database type="file">install/dbinstall.php</database>
		<modification format="xml" type="file">install/subforuminst.xml</modification>

		<require-dir name="sources/SubForums" destination="SOURCEDIR/addons" />
		<require-dir name="themes/SubForums" destination="THEMEDIR/addons" />
		<require-dir name="languages/SubForums" destination="LANGUAGEDIR/addons" />
		<require-dir name="images/SubForums" destination="IMAGESDIR/addons" />
		<redirect url="$scripturl?action=admin;area=subforums" timeout="15000">install/installdone.html</redirect>
	</install>

	<uninstall for="1.0.*">
		<readme type="file" parsebbc="true">install/remove.bbc</readme>
		<code type="file">removehook.php</code>
		<modification reverse="true">install/subforuminst.xml</modification>

		<remove-dir name="SOURCEDIR/addons/SubForums" />
		<remove-dir name="THEMEDIR/addons/SubForums" />
		<remove-dir name="LANGUAGEDIR/addons/SubForums" />
		<remove-dir name="IMAGESDIR/addons/SubForums" />
		<redirect url="$scripturl" timeout="15000">install/removedone.html</redirect>
	</uninstall>
</package-info>